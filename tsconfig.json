{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true,
    "paths": {
      "Interfaces/*": [
        "src/interfaces/*"
      ],
      "Client/*": [
        "src/api-client/*"
      ],
      "Server/*": [
        "src/api-server/*"
      ],
      "Local/*": [
        "src/api-local/*"
      ],
      "Ux/*": [
        "src/ux/*"
      ],
      "Types/*": [
        "src/types/*"
      ],
      "Tools/*": [
        "src/tools/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "assets/schemas"
  ],
  "exclude": [
    "src/App_old.tsx"
  ],
  "files": [
    "src/preload.d.ts",
    "src/scss.d.ts",
  ]
}